@import 'nib'
@import 'rupture'
@import 'settings'


global-reset()

*
  box-sizing border-box
  font-smoothing subpixel-antialiased
  transition 300ms

html
body
  margin 0
  padding 0
  font-family sans-serif
  font-size 13px
  font-style normal
  font-variant normal
  font-weight lighter
  position relative
  overflow hidden
  width 100%
  height 100%
  background-color bgcolor
  color white

.pullright
  float right
a
  cursor pointer
  color blue
  text-decoration none

button
a.button
  display block
  width 100%
  font-size 2rem
  background-color blue
  border-radius 0.2rem
  border none
  color white
  padding 1rem
  text-align center
  text-decoration none
  cursor pointer

input
  width 100%
  padding 0.3rem

pre
  font-family "Lucida Console", Monaco, monospace
  margin 1rem 0 2rem 0
  line-height 1.5rem

#fps
  display block
  color white
  position absolute
  top 0

#container
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  position absolute

  canvas
    width 100%
    height 100%
    background-color black

#initialSelect
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  position absolute

  h2
    font-size 2.5rem
    margin 0.5rem 0

  input
    width 100%
    font-size 2rem
    text-align center
    padding 1rem
    border-radius 0.2rem
    border none
    display block


  >div
    width 200px
    margin 1rem
