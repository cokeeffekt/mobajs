@import 'nib'
@import 'rupture'
@import 'settings'


global-reset()

*
  box-sizing border-box
  font-smoothing subpixel-antialiased
  transition 300ms

html
body
  margin 0
  padding 0
  font-family sans-serif
  font-size 13px
  font-style normal
  font-variant normal
  font-weight lighter
  line-height 16px
  position relative
  overflow hidden
  width 100%
  height 100%
  background-color bgcolor

#fps
  display block
  color white
  position absolute
  top 0

#container
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

  canvas
    width 800px
    height 600px
    background-color black
