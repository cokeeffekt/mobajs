.overlay
  width 100%
  height 100%
  background-color alpha(black, 0.5)
  position absolute
  top 0
  left 0
  z-index 1000
  display flex
  justify-content center
  align-items center

  div
    width 400px
    background-color black
    border 2px white solid
    padding 1rem
    min-height 200px
