@import 'nib'
@import 'rupture'
@import 'settings'

#container
  width 100%
  height 100%
  display flex
  position absolute

  .stats
    position absolute
    pointer-events none
    opacity 0.7
    background-color black
    color white
    z-index 10
    font-family "Lucida Console", Monaco, monospace
    padding 1rem
    min-width 120px

    span:after
      content attr(data-value)


  canvas
    width 100%
    height 100%
    background-color green
    image-rendering pixelated
    position absolute
